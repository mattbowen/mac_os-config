#! /usr/bin/env bash

# DESCRIPTION
# Installs applications.
brew tap caskroom/cask

# EXECUTION
# Alfred
brew cask install alfred

# App Cleaner
brew cask install appcleaner

# Battle.net
brew cask install battle-net

# Bartender
brew cask install bartender

# Boxcryptor
brew cask install boxcryptor

# Google Chrome
brew cask install google-chrome

# Cyberduck
brew cask install cyberduck

# Cyberghost
brew cask install cyberghost

# Dash
brew cask install dash

# DevonThink
brew cask install devonthink-pro

# Doxie
brew cask install doxie

# Dropbox
brew cask install dropbox

# Firefox
brew cask install firefox

# iTerm
brew cask install iterm2

# Marp
brew cask install marp

# OmniFocus
brew cask install omnifocus

# Path Finder
brew cask install path-finder

# QuickLook - Markdown
install_zip_app "$QUICK_LOOK_MARKDOWN_APP_URL" "$QUICK_LOOK_MARKDOWN_APP_NAME"

# Steam
brew cask install steam

# Sonos
brew cask install sonos

# Sublime Text
brew cask install sublime-text

# Sublime Text URL Handler
install_zip_app "$SUBLIME_URL_HANDLER_APP_URL" "$SUBLIME_URL_HANDLER_APP_NAME"

# Tor Browser
brew cask install torbrowser
